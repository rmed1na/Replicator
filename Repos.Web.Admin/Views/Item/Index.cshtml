@using Repos.Web.Admin.ViewModels
@model ItemViewModel
@{
    ViewData["Title"] = "Index";
}

<div>
    <div>
        <h1>Artículos</h1>
        <div class="button-left-container">
            <a asp-action="Create"><img class="add-link-icon" src="~/content/images/plus.png"/>Nuevo artículo</a>
        </div>
    </div>
    <div>
        @if (Model != null && Model.Items.Count > 0)
        {
            <table>
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Items[0].Code)</th>
                        <th>@Html.DisplayNameFor(model => model.Items[0].Description)</th>
                        <th>@Html.DisplayNameFor(model => model.Items[0].Price)</th>
                        <th>@Html.DisplayNameFor(model => model.Items[0].TaxPercentaje)</th>
                        <th>@Html.DisplayNameFor(model => model.Items[0].Status)</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                    <tr>
                        <td>@Html.DisplayFor(i => item.Code)</td>
                        <td>@Html.DisplayFor(i => item.Description)</td>
                        <td>@Html.DisplayFor(i => item.Price)</td>
                        <td>@Html.DisplayFor(i => item.TaxPercentaje) %</td>
                        <td>@Html.DisplayFor(i => item.Status)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                            <a asp-action="Delete" asp-route-id="@item.Id">Borrar</a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>