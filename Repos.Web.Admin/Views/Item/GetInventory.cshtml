@using Repos.Web.Admin.ViewModels
@model InventoryViewModel
@{
    ViewData["Title"] = "Inventory";
}

<div>
    <div>
        <h1>Inventario</h1>
        <div>
            @if (Model != null && Model.Inventory.Count > 0)
            {
                <table>
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Inventory[0].Warehouse.Store.Name)</th>
                            <th>@Html.DisplayNameFor(model => model.Inventory[0].Warehouse.Name)</th>
                            <th>@Html.DisplayNameFor(model => model.Inventory[0].Item.Code)</th>
                            <th>@Html.DisplayNameFor(model => model.Inventory[0].Item.Description)</th>
                            <th>@Html.DisplayNameFor(model => model.Inventory[0].Stock)</th>
                            <th>@Html.DisplayNameFor(model => model.Inventory[0].Reserved)</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Inventory)
                        {
                        <tr>
                            <td>@Html.DisplayFor(i => item.Warehouse.Store.Name)</td>
                            <td>@Html.DisplayFor(i => item.Warehouse.Name)</td>
                            <td>@Html.DisplayFor(i => item.Item.Code)</td>
                            <td>@Html.DisplayFor(i => item.Item.Description)</td>
                            <td>@Html.DisplayFor(i => item.Stock)</td>
                            <td>@Html.DisplayFor(i => item.Reserved)</td>
                            <td>
                                @if (item.Id != default || item.Id == default)
                                {
                                    <a class="edit-link"
                                       asp-action="EditInventory" 
                                       asp-route-itemId="@item.Item.Id"
                                       asp-route-warehouseId="@item.Warehouse.Id"
                                       asp-route-inventoryId="@item.Id"
                                       ><img src="~/content/images/pen.png"/></a>
                                }
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>