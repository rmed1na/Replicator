@using Repos.Web.Admin.ViewModels
@model WarehouseViewModel 
@{
    ViewData["Title"] = "Index";
}

<div>
    <div>
        <h1>Almacenes</h1>
        <div class="button-left-container">
            <a asp-action="Create"><img class="add-link-icon" src="~/content/images/plus.png"/>Nuevo almacén</a>
        </div>
    </div>
    <div>
        @if (Model != null && Model.Warehouses.Count > 0)
        {
            <table>
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Warehouses[0].Id)</th>
                        <th>@Html.DisplayNameFor(model => model.Warehouses[0].Code)</th>
                        <th>@Html.DisplayNameFor(model => model.Warehouses[0].CreateDate)</th>
                        <th>@Html.DisplayNameFor(model => model.Warehouses[0].Name)</th>
                        <th>@Html.DisplayNameFor(model => model.Warehouses[0].Store.Code)</th>
                        <th>@Html.DisplayNameFor(model => model.Warehouses[0].Status)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Warehouses)
                    {
                        <tr>
                            <td>@Html.DisplayFor(i => item.Id)</td>
                            <td>@Html.DisplayFor(i => item.Code)</td>
                            <td>@Html.DisplayFor(i => item.Name)</td>
                            <td>@Html.DisplayFor(i => item.Store.Code)</td>
                            <td>@Html.DisplayFor(i => item.Status)</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                                <a asp-action="Delete" asp-route-id="@item.Id">Borrar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>
