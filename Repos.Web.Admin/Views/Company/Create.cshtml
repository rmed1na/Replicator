@model Company
@{
    ViewData["Title"] = "Create";
}

<div>
    <div>
        <h2>Registra una nueva empresa</h2>
    </div>
    <div>
        <form asp-controller="Company" asp-action="Create" method="post">
            <input type="text" asp-for="Code" placeholder="Código" required/>
            <br />
            <input type="text" asp-for="Name" placeholder="Nombre" required />
            <br />
            <input class="submit-button" type="submit" value="Guardar"/>
        </form>
    </div>
</div>

