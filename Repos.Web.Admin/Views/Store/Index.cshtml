@using Repos.Web.Admin.ViewModels
@model StoreViewModel
@{
    ViewData["Title"] = "Tiendas";
}

<div>
    <div>
        <h1>Sucursales</h1>
        <div class="button-left-container">
            <a asp-controller="Store" asp-action="Create"><img class="add-link-icon" src="~/content/images/add.png" />Nueva sucursal</a>
        </div>
    </div>
    <div>
        @if (Model != null && Model.Stores.Count > 0)
        {
            <table>
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Stores[0].Company)</th>
                        <th>@Html.DisplayNameFor(model => model.Stores[0].Code)</th>
                        <th>@Html.DisplayNameFor(model => model.Stores[0].Name)</th>
                        <th>@Html.DisplayNameFor(model => model.Stores[0].Address)</th>
                        <th>@Html.DisplayNameFor(model => model.Stores[0].Status)</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Stores)
                    {
                        <tr>
                            <td>@Html.DisplayFor(i => item.Company.Code)</td>
                            <td>@Html.DisplayFor(i => item.Code)</td>
                            <td>@Html.DisplayFor(i => item.Name)</td>
                            <td>@Html.DisplayFor(i => item.Address)</td>
                            <td>@Html.DisplayFor(i => item.Status)</td>
                            <td>
                                <a class="edit-link" asp-action="Edit" asp-route-id="@item.Id" title="Editar"><img src="~/content/images/pen.png"/></a>
                            </td>
                            <td>
                                <a class="delete-link" asp-action="Delete" asp-route-id="@item.Id" title="Eliminar"><img src="~/content/images/cancel.png" /></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>

