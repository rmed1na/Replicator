@using Repos.Web.Admin.ViewModels
@model StoreViewModel
@{
    ViewData["Title"] = "Index";
}

<div>
    <div>
        <h1>Sucursales</h1>
        <div class="button-left-container">
            <a asp-controller="Store" asp-action="Create"><img class="add-link-icon" src="~/content/images/plus.png" />Nueva sucursal</a>
        </div>
    </div>
    <div>
        @if (Model != null && Model.Stores.Count > 0)
        {
            <table>
                <thead>
                    <tr>
                        @Html.DisplayNameFor(model => model.Stores[0].Company)
                    </tr>
                    <tr>
                        @Html.DisplayNameFor(model => model.Stores[0].Code)
                    </tr>
                    <tr>
                        @Html.DisplayNameFor(model => model.Stores[0].Name)
                    </tr>
                    <tr>
                        @Html.DisplayNameFor(model => model.Stores[0].Address)
                    </tr>
                    <tr>
                        @Html.DisplayNameFor(model => model.Stores[0].Status)
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Stores)
                    {
                        <tr>
                            <td>@Html.DisplayFor(i => item.Company.Name)</td>
                            <td>@Html.DisplayFor(i => item.Code)</td>
                            <td>@Html.DisplayFor(i => item.Name)</td>
                            <td>@Html.DisplayFor(i => item.Address)</td>
                            <td>@Html.DisplayFor(i => item.Status)</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                                <a asp-action="Delete" asp-route-id="@item.Id">Borrar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>

